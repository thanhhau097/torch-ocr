{
    "name": "OCR_test",
    "type": "ctc",
    "n_gpu": 1,

    "arch": {
        "type": "CTCModel",
        "args": {}
    },
    "data_loader": {
        "type": "AutoGenerateDataloader",
        "args":{
            "data_dir": "data/",
            "json_path": "train.json",
            "batch_size": 2,
            "shuffle": true,
            "validation_split": 0.1,
            "num_workers": 2
        }
    },
    "optimizer": {
        "type": "Adam",
        "args":{
            "lr": 0.001,
            "weight_decay": 0,
            "amsgrad": true
        }
    },
    "loss": {
        "ctc": "ctc_loss",
        "attention": "ce_loss"
    },
    "metrics": {
        "ctc": [
            "accuracy_ctc"
        ],
        "attention": [
            "accuracy_attention"
        ]
    },
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 50,
            "gamma": 0.1
        }
    },
    "trainer": {
        "epochs": 100,

        "save_dir": "saved/",
        "save_period": 1,
        "verbosity": 2,

        "monitor": "min val_loss",
        "early_stop": 30,

        "tensorboard": true
    }
}
